<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffffffff">

    <Button
        android:id="@+id/bclear"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bExit"
        android:layout_alignStart="@+id/bExit"
        android:layout_centerVertical="true"
        android:background="#ffcfe2f3"
        android:onClick="clear"
        android:text="@string/clear" />

    <Button
        android:id="@+id/bExit"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bclear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:background="#ffcfe2f3"
        android:onClick="exit"
        android:text="@string/exit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/everything_was_quite"
        android:id="@+id/MovedView"
        android:textSize="30sp"
        android:layout_marginBottom="45dp"
        android:layout_above="@+id/bclear"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
